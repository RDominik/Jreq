// Prisma schema for Jreq MVP
// DB: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  key       String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  epics     Epic[]
}

model Epic {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  title     String
  status    String   @default("todo")
  priority  Int      @default(0)
  stories   UserStory[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserStory {
  id         String   @id @default(cuid())
  epic       Epic     @relation(fields: [epicId], references: [id])
  epicId     String
  title      String
  status     String   @default("todo")
  assignee   User?    @relation(fields: [assigneeId], references: [id])
  assigneeId String?
  points     Int?
  tasks      Task[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Task {
  id          String    @id @default(cuid())
  story       UserStory @relation(fields: [userStoryId], references: [id])
  userStoryId String
  title       String
  status      String   @default("todo")
  assignee    User?    @relation(fields: [assigneeId], references: [id])
  assigneeId  String?
  dueDate     DateTime?
  comments    Comment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?
  body      String
  createdAt DateTime @default(now())
}

model Attachment {
  id        String   @id @default(cuid())
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  url       String
  name      String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
